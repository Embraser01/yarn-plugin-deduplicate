{
	"compilerOptions": {
		"baseUrl": ".",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"skipLibCheck": true,
		"strict": true,
		"target": "es2017",
		"lib": ["es2017", "esnext.asynciterable"]
	},
	"include": ["sources/**/*"]
}
